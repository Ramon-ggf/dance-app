<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Crear nuevo encuentro</h1>

            <form action="/meetup/new" method="POST">

                <div class='form-group'>
                    <label for='name'>Nombre del encuentro</label>
                    <input name='name' type='text' class='form-control' placeholder='Nombre del encuentro' id='name'
                        required>
                </div>

                <div class='form-group'>
                    <label for='description'>Descripción del encuentro</label>
                    <input name='description' type='text' class='form-control' placeholder='Descripción del escuentro'
                        id='description' required>
                </div>

                <div class='form-group'>
                    <label for='date'>Fecha</label>
                    <input name='date' type='text' class='form-control' placeholder='Fecha' id='date' required>
                </div>

                <div class='form-group'>
                    <label for='location'>Lugar</label>
                    <input name='latitude' type='text' class='form-control' placeholder="Latitud" id='latitude'
                        required>
                    <input name='longitude' type='text' class='form-control' placeholder="Longitud" id='longitude'
                        required>
                </div>

                <button type='submit' class='btn btn-dark btn-block'>Crear encuentro</button>
                {{!-- {{#if errorMsg}}
                <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}} --}}
            </form>

        </div>
    </div>
</div>