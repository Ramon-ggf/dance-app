{{#with user}}
<p>Nombre: {{name}}</p>
<p>Apellidos: {{lastname}}</p>
<p>Correo electrónico: {{email}}</p>
<a href="/profile/edit">Editar perfil</a>
{{/with}}

{{#if isTeach}}
<h2>Estas son tus clases como profe</h2>

{{#each courses}}
    <p>Nombre: {{name}}</p>
    <p>Descripción: {{description}}</p>
    <p>Fecha: {{date}}</p>
    <hr>
{{/each}}

<h2>Estas son tus clases como alumno</h2>
{{#each user.courses}}
    <p>Nombre: {{name}}</p>
    <p>Descripción: {{description}}</p>
    <p>Fecha: {{date}}</p>
    <hr>
{{/each}}
{{/if}}

{{#if isAlumni}}
<h2>Estas son tus clases como alumno</h2>
{{#each user.courses}}
    <p>Nombre: {{name}}</p>
    <p>Descripción: {{description}}</p>
    <p>Fecha: {{date}}</p>
    <hr>
{{/each}}
{{/if}}


