<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Edita tu perfil, {{user.name}}</h1>

            <form action="/profile/edit/{{user._id}}" method="POST">

                <div class='form-group'>
                    <label for='name'>Nombre</label>
                    <input name='name' type='text' class='form-control' placeholder='nombre' id='name'
                        value="{{user.name}}" required>
                </div>

                <div class='form-group'>
                    <label for='lastname'>Apellidos</label>
                    <input name='lastname' type='text' class='form-control' placeholder='Apellidos' id='lastname'
                        value="{{user.lastname}}" required>
                </div>

                <div class='form-group'>
                    <label for='email'>Correo electrónico</label>
                    <input name='email' type='text' class='form-control' placeholder='Email' id='email'
                        value="{{user.email}}" required>
                </div>

                <div class='form-group'>
                    {{!-- <label for='password'>Contraseña</label> --}}
                    <input name='password' type='hidden' class='form-control' placeholder='******' id='password'
                        value="{{user.password}}">
                </div>

                <div class="role-select">

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="role" name="role" value="TEACH">
                        <label class="form-check-label" for="role">Quiero cambiar a profesor@ de baile</label>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="role" name="role" value="ALUM">
                        <label class="form-check-label" for="role">Quiero cambiar a alumn@</label>
                    </div>

                </div>

                <button type='submit' class='btn btn-dark btn-block'>Actualizar</button>

            </form>
        </div>

        <div class="col-md-6">
            <div class='form-group'>
                <div class="custom-file">
                    <form action="/profile/edit/profile-picture" method="POST" enctype="multipart/form-data">
                        <label class="custom-file-label" for='img'>Imagen de perfil</label>
                        <input name='img' type="file" class="custom-file-input" placeholder='Selecciona un archivo'
                            id='img'>

                        <button type='submit' class='btn btn-dark btn-block'>Actualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

