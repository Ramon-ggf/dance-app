<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Iniciar sesión</h1>

            <form action="/login" method="POST">

                <div class='form-group'>
                    <label for='email'>Correo electrónico</label>
                    <input name='email' type='text' class='form-control' pattern="[\w-\.]+@([\w-]+\.)+[\w-]{2,4}" placeholder='Email' id='email' required >
                </div>

                <div class='form-group'>
                    <label for='password'>Contraseña</label>
                    <input name='password' type='password' class='form-control' placeholder='******' id='password'
                        required >
                    <p class="text-muted"><small>¿No tienes cuenta todavía? <a href="/signup">¡Regístrate!</a></small></p>
                </div>

                <button type='submit' class='btn btn-block'>Iniciar sesión</button>

                {{#if errorMsg}}
                <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}

            </form>

        </div>
    </div>
</div>