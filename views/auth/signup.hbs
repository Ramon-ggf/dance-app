<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Registro de usuario</h1>

            <form action="/signup" method="POST">

                <div class='form-group'>
                    <label for='name'>Nombre</label>
                    <input name='name' type='text' class='form-control' placeholder='nombre' id='name' required>
                </div>

                <div class='form-group'>
                    <label for='lastname'>Apellidos</label>
                    <input name='lastname' type='text' class='form-control' placeholder='Apellidos' id='lastname'
                        required>
                </div>

                <div class='form-group'>
                    <label for='email'>Correo electrónico</label>
                    <input name='email' type='text' class='form-control' placeholder='Email' id='email' required>
                </div>

                <div class='form-group'>
                    <label for='password'>Contraseña</label>
                    <input name='password' type='password' class='form-control' placeholder='******' id='password'
                        required>
                </div>

                <div class="role-select">

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="role" name="role" value="TEACH">
                        <label class="form-check-label" for="role">Soy profesor@ de baile</label>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="role" name="role" value="ALUM">
                        <label class="form-check-label" for="role">Soy alumn@</label>
                    </div>

                </div>

                <button type='submit' class='btn btn-dark btn-block'>Registrarse</button>
                {{!-- {{#if errorMsg}}
                <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}} --}}
            </form>

        </div>
    </div>
</div>